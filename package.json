{
  "name": "concurrency-friends",
  "version": "1.0.0",
  "description": "Go-style channels and some other concurrency tools.",
  "author": "Cinnamon <cinnamon_npm@fastmail.com>",
  "homepage": "https://github.com/cinnamon-bun/concurrency-friends",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/cinnamon-bun/concurrency-friends.git"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "clean": "rm -rf build coverage .nyc_output",
    "build": "tsc",
    "test": "jest src/test/*.ts --verbose",
    "test-conveyor": "jest src/test/conveyor.test.ts --verbose",
    "test-coverage": "jest src/test/*.ts --verbose --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.0"
  },
  "dependencies": {
    "stable": "^0.1.8"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
